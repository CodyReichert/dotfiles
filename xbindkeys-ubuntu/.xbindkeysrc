# volUp
"amixer -q set Master playback 2%+"
    m:0x10 + c:123
    Mod2 + XF86AudioRaiseVolume 

# volDown
"amixer -q set Master playback 2%-"
    m:0x10 + c:122
    Mod2 + XF86AudioLowerVolume 

# ncmpcpp play/pause
"ncmpcpp toggle"
    m:0x10 + c:127
    Mod2 + Pause 

# ncmpcpp stop
"ncmpcpp stop"
    m:0x11 + c:127
    Shift+Mod2 + Pause 

# ncmpcpp next
"ncmpcpp next"
    m:0x10 + c:75
    Mod2 + F9 

# ncmpcpp previous
"ncmpcpp prev"
    m:0x0 + c:74
    Mod2 + F8

# pop up clerk to browse library
"terminator -e ncmpcpp"
    m:0x0 + c:148
    XF86Calculator

# clerk shuffle songs
"clerk -rs; removeMpdDuplicates"
    m:0x11 + c:75
    Shift+Mod2 + F9

# clerk shuffle albums
"clerk -ra"
    m:0x11 + c:74
    Shift+Mod2 + F8

# End of xbindkeys configuration
